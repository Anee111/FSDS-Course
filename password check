## password check
num = 0
spl = 0
upp = 0
low = 0
space = 0
password = input("enter password:")
if 8<=len(password)<=20:
  for i in password:
    if i.isdigit():
      num+=1
    elif i.isupper():
      upp+=1
    elif i.islower():
      low+=1
    elif i == " ":
      space+=1
    elif  not i.isalpha() or  not i.isdigit():
      spl+=1
  if num>0 and spl>0 and upp>0 and low>0 and space==0:
    print("password is acceptable")
  else:
    print("password is not acceptable. Try again")
else:
  print("Password must be between 8 and 20 characters")
    
